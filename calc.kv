#:kivy 1.0.9

<CalcGUI>:
    down: down
    up: up
    id: main
    
    HelpButton:
        id: help
        background_color: 255, 0, 0, 1
        font_size: 24
        height: root.height /3
        width: root.width / 10
        y: root.y
        x: root.x
        text: "Help"
    
    ScrollButton:
        input: input
        id: down
        direction: "DOWN"
        background_color: 0, 0, 255, 1
        font_size: 12
        height: root.height /3
        width: root.width / 10
        y: root.y + help.height
        x: root.x
        Image:
            source: "down.png"
            width: root.down.width/2
            height: root.down.height/2
            keep_ratio: False
            allow_stretch: True
            x: root.down.center_x - self.width/2
            y: root.down.center_y - self.height/2
        
    ScrollButton:
        input: input
        id: up
        direction: "UP"
        background_color: 0, 0, 255, 1
        font_size: 12
        height: root.height /3
        width: root.width / 10
        y: root.y + down.height + help.height
        x: root.x
        Image:
            source: "up.png"
            width: root.up.width/2
            height: root.up.height/2
            keep_ratio: False
            allow_stretch: True
            x: root.up.center_x - self.width/2
            y: root.up.center_y - self.height/2
        
    UserInput:
        line1: line1
        line2: line2
        line3: line3
        line4: line4
        line5: line5
        line6: line6
        line7: line7
        line8: line8
        id: input
        font_size: 32 
        multiline: False
        height: 70
        width: root.width
        center_x: root.width / 2 + up.width
        top: root.y + self.height
        text: str("Input Expression Here")
    
    Label:
        canvas.before:
            Color:
                rgba: .84, .84, .77, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: line1
        markup: True
        text_size: self.size
        valign: 'top'
        halign: 'left'
        size: root.width - up.width, (root.height - input.height)/8
        y: root.y + input.height + 7*self.height
        x: root.x + up.width
        font_size: 32
        color: (255, 255, 255, 1)
        text: ''
